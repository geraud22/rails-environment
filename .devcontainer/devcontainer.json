{
	"name": "Ruby on Rails & Postgres",
	"dockerComposeFile": "../compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=${localWorkspaceFolder}/container-workspace,target=/workspace,type=bind"
    ],
    "forwardPorts": [
        3000, 
        5432,
        8080
    ],
    "customizations": {
        "vscode": {
            "extensions": [
				"Shopify.ruby-extensions-pack",
				"castwide.solargraph",
				"vortizhe.simple-ruby-erb",
				"rayhanw.erb-helpers",
				"aki77.rails-db-schema"
			]
        }
    }
}